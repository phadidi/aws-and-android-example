<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fabflix"
            android:id="@+id/title"
            android:layout_centerHorizontal="true"
            android:textColor="@color/red"
            android:textSize="35dp" tools:ignore="MissingConstraints" tools:layout_editor_absoluteY="59dp"
            tools:layout_editor_absoluteX="153dp"/>
    <EditText
            android:layout_width="277dp"
            android:layout_height="40dp"
            android:id="@+id/search_bar"
            android:hint="Search Movie"
            android:focusable="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="172dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/search_button" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/search_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="168dp"
            android:layout_marginEnd="28dp" android:layout_marginRight="28dp"/>

    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message"
            android:layout_below="@+id/login"
            android:layout_centerHorizontal="true"
            android:textSize="25dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>